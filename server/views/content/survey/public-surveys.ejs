<!-- Main Content -->
<div class="container">
    <div class="row justify-content-center">
        <div class="col-5 align-self-start">
            <h1 style="color: white; margin-top: 80px; margin-bottom: 80px;">Available Surveys to take</h1>
        </div>
        <div class="col-4 align-self-end">
            <% if(typeof displayName=='string' && displayName ) {%>
            <div class="card-body"
                style="margin-top: 50px; margin-bottom: 80px; border-radius: 15px 50px; border: 2px solid #1663be; background-color: transparent;">
                <div class="container-fluid">
                    <div class="row justify-content-center">
                        <div class="col-1">
                            <a class="link" href="/surveys/add"><i class="fas fa-plus-circle fa-5x newsurvey"
                                    style=" cursor: pointer; cursor: hand; margin-right: 50px;"></i></a>
                        </div>
                        <div class="col">
                            <h4 style="color: white; margin-top: 25px; margin-left: 80px;" class="card-title">Create a
                                New Survey</h4>
                        </div>
                    </div>
                </div>
            </div>
            <%} else {%>
            <div class="card-body"
                style="margin-top: 50px; margin-bottom: 80px; border-radius: 15px 50px; border: 2px solid #2663be; background-color: transparent;">
                <div class="container-fluid">
                    <div class="row justify-content-center">
                        <div class="col-1">
                            <a class="link" href="/user/login"><i class="fas fa-plus-circle fa-5x newsurvey"
                                    style=" cursor: pointer; cursor: hand; margin-right: 50px;"></i></a>
                        </div>
                        <div class="col">
                            <h4 style="color: white; margin-top: 25px; margin-left: 80px;" class="card-title">Create a
                                new survey</h4>
                        </div>
                    </div>
                </div>
            </div>
            <%}%>  
        </div>
        <div class="col-md-11 text-center">
            <div class="row">
        <% for(let count = 0; count < PublicSurveyList.length; count++) { %>

            <% if ( today >= PublicSurveyList[count].startDate && today <= PublicSurveyList[count].endDate) {%>
            <div class="col-4">
                <div class="card text-center popup" style="background-color: transparent; margin-bottom: 75px;"
                    class="d-flex">
                    <div class="card-header  text-muted" style="color:white; font-family: Courier; font-size:120%;">
                    </div>
                    <div class="card-body"
                        style="border-radius: 15px 50px; background-color: #1663be;   cursor: pointer; cursor: hand;"
                        onclick="window.location='/public-surveys/<%= PublicSurveyList[count]._id %>';">
                        <div class="row">

                            <div class="col">
                                <h4 style="color: white; margin-top: 25px; margin-right: 40px;" class="card-title">
                                    <%= PublicSurveyList[count].surveyName %></h4>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer" style=" color:white; font-family: Courier;  font-size:120%;">
                        Available until: <%= PublicSurveyList[count].endDate.toISOString().split('T')[0] %>
                    </div>
                </div>
            </div>
            <%  } } %>

        </div>
    </div>
</div>