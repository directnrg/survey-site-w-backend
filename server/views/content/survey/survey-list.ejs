  <!-- Shahriar -->
  <!-- Main Content -->
  <div class="container">
      <div class="row justify-content-center">
          <div class="col-5 align-self-start">
              <h1 style="color: white; margin-top: 80px; margin-bottom: 80px;">Created surveys</h1>
          </div>
          <div class="col-4 align-self-end">
              <% if(typeof displayName=='string' && displayName ) {%>
              <div class="card-body"
                  style="margin-top: 50px; margin-bottom: 80px; border-radius: 15px 50px; border: 2px solid #1663be; background-color: transparent;">
                  <div class="container-fluid">
                      <div class="row justify-content-center">
                          <div class="col-1">
                              <a class="link" href="/surveys/add/"><i class="fas fa-plus-circle fa-5x newsurvey"
                                      style=" cursor: pointer; cursor: hand; margin-right: 50px;"></i></a>
                          </div>
                          <div class="col">
                              <h4 style="color: white; margin-top: 25px; margin-left: 80px;" class="card-title">Create
                                  a
                                  Survey</h4>
                          </div>
                      </div>
                  </div>
              </div>
              <%} else {%>
              <div class="card-body"
                  style="margin-top: 50px; margin-bottom: 80px; border-radius: 15px 50px; border: 2px solid #1663be; background-color: transparent;">
                  <div class="container-fluid">
                      <div class="row justify-content-center">
                          <div class="col-1">
                              <a class="link" href="/user/login"><i class="fas fa-plus-circle fa-5x newsurvey"
                                      style=" cursor: pointer; cursor: hand; margin-right: 50px;"></i></a>
                          </div>
                          <div class="col">
                              <h3 style="color: white; margin-top: 25px; margin-left: 80px;" class="card-title">Login to
                                  Create a survey</h3>
                          </div>
                      </div>
                  </div>
              </div>
              <%}%>  

          </div>
        </div>


          <div class="col-md-11 text-center">
          
              <div class="row">    
            <% for(let count = 0; count < SurveyList.length; count++) { %>
              <% if(SurveyList[count].displayName == displayName) {%>

              <div class="col-8">
                  <div class="card text-center popup2" style="background-color: transparent; margin-bottom: 75px;"
                      class="d-flex">
                      <div class="card-header  text-muted" style="color:white; font-family: Courier; font-size:120%;">
                      </div>
                      <div class="card-body"
                          style="border-radius: 15px 50px; background-color: #1663be;   cursor: pointer; cursor: hand;"
                          onclick="window.location='/surveys/report/<%= SurveyList[count]._id %>';">
                          <div class="row">
                              <div class="col-4">
                                  <a class="nav-link popup2" style="color: white; font-size:120%"><i
                                          class="fas fa-chart-pie"></i> Survey Results for:</a>
                              </div>
                              <div class="col">
                                  <h4 style="color: white; margin-top: 25px; margin-right: 40px;" class="card-title">
                                      <%= SurveyList[count].surveyName %></h4>
                              </div>
                          </div>
                      </div>
                      <% if ( today >= SurveyList[count].startDate && today <= SurveyList[count].endDate) {%>
                      <div class="card-footer" style=" color:white; font-family: Courier;  font-size:120%;">
                          Available until: <%= SurveyList[count].endDate.toISOString().split('T')[0] %>
                      </div>
                      <%} else if ( today > SurveyList[count].endDate) {%>
                      <div class="card-footer" style=" color:white; font-family: Courier;  font-size:120%;">
                          Expired at: <%= SurveyList[count].endDate.toISOString().split('T')[0] %>
                      </div>
                      <%} else {%>
                      <div class="card-footer" style=" color:white; font-family: Courier;  font-size:120%;">
                          Starts on: <%= SurveyList[count].startDate.toISOString().split('T')[0] %>
                      </div>
                      <%}%>
                             
                    </div>   
              </div>
              <div class="col mw-100">
                <a class=" popup2" href="/surveys/edit/<%= SurveyList[count]._id %>" id="editButton">
                      <i style="margin-top: 55px; cursor: pointer; cursor: hand; color: #30be5f;"
                          class="fas fa-3x fa-pen-square"></i></a>
                  </div>
                  <div class="col mw-100">
                      <a href="/surveys/delete/<%= SurveyList[count]._id %>"  id="deleteButton"
                          onclick="return confirm('Are you sure you want to delete this item?')">
                          <i style="margin-top: 55px; cursor: pointer; cursor: hand; color: #ffffff;"
                              class="fas fa-3x fa-trash-alt popup2"></i></a>
                  </div>
                  <% } }  %>
              </div>
          </div>
      </div>